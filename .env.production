# üß± Brick3 MEV System - Production Configuration
# ================================================
# Copy this file to .env and configure for production

# ==================== NETWORK ====================
# Monad Mainnet RPC
MONAD_RPC=https://rpc.monad.xyz
MONAD_CHAIN_ID=143

# Backup RPC endpoints
MONAD_RPC_BACKUP_1=https://monad-mainnet.g.alchemy.com/v2/YOUR_KEY
MONAD_RPC_BACKUP_2=https://monad.publicnode.com

# ==================== BOT WALLET ====================
# ‚ö†Ô∏è CRITICAL: Never commit private keys to git!
# Use environment variables or secrets manager
BOT_PRIVATE_KEY=your_bot_private_key_here
BOT_ADDRESS=0xYourBotAddress

# Minimum balance to maintain (MON)
MIN_BOT_BALANCE_MON=10

# ==================== API CONFIG ====================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Demo mode (set to false for production)
DEMO_MODE=false

# ==================== MEV BOT CONFIG ====================
# Sandwich Bot
SANDWICH_ENABLED=true
SANDWICH_MIN_PROFIT_USD=50
SANDWICH_MAX_GAS_GWEI=100
SANDWICH_SLIPPAGE_PERCENT=0.5
SANDWICH_MAX_POSITION_MON=1000

# Arbitrage Bot
ARBITRAGE_ENABLED=true
ARBITRAGE_MIN_PROFIT_USD=20
ARBITRAGE_MAX_GAS_GWEI=100
ARBITRAGE_SLIPPAGE_PERCENT=0.3
ARBITRAGE_MAX_HOPS=4

# Liquidation Bot
LIQUIDATION_ENABLED=true
LIQUIDATION_MIN_PROFIT_USD=100
LIQUIDATION_MAX_GAS_GWEI=150

# Backrun Bot
BACKRUN_ENABLED=true
BACKRUN_MIN_PROFIT_USD=10
BACKRUN_MAX_GAS_GWEI=80

# ==================== REVENUE DISTRIBUTION ====================
# Distribution percentages (must sum to 100)
REVENUE_SHMON_PERCENT=70
REVENUE_BRICK3_PERCENT=20
REVENUE_VALIDATOR_PERCENT=10

# Distribution addresses
SHMON_POOL_ADDRESS=0xShMONPoolAddress
BRICK3_TREASURY_ADDRESS=0xBrick3TreasuryAddress
VALIDATOR_REWARDS_ADDRESS=0xValidatorRewardsAddress

# Minimum amount to distribute (MON)
MIN_DISTRIBUTION_AMOUNT_MON=10

# ==================== FASTLANE ATLAS ====================
FASTLANE_ATLAS_CONTRACT=0xbB010Cb7e71D44d7323aE1C267B333A48D05907C
FASTLANE_AUCTIONEER_URL=https://auctioneer.fastlane.xyz
FASTLANE_API_KEY=your_fastlane_api_key

# ==================== DEX CONTRACTS ====================
# MonadSwap (Uniswap V2 style)
MONADSWAP_ROUTER=0xMonadSwapRouter
MONADSWAP_FACTORY=0xMonadSwapFactory

# Kuru DEX
KURU_ROUTER=0xKuruRouter

# ==================== LENDING PROTOCOLS ====================
# For liquidation bot
LENDING_PROTOCOL_1=0xLendingProtocol1
LENDING_PROTOCOL_2=0xLendingProtocol2

# ==================== MONITORING ====================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Metrics endpoint
METRICS_ENABLED=true
METRICS_PORT=9090

# ==================== DATABASE (Optional) ====================
# For persistent storage of executions and revenue
DATABASE_URL=postgresql://user:pass@localhost:5432/brick3_mev
REDIS_URL=redis://localhost:6379

# ==================== ALERTS ====================
# Discord webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx

# Telegram bot for notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ==================== SECURITY ====================
# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# IP whitelist (comma-separated)
IP_WHITELIST=

# ==================== PRODUCTION CHECKLIST ====================
# Before going live:
# [ ] Set DEMO_MODE=false
# [ ] Configure real BOT_PRIVATE_KEY
# [ ] Set real distribution addresses
# [ ] Configure FastLane API key
# [ ] Set up monitoring and alerts
# [ ] Test with small amounts first
# [ ] Set appropriate profit thresholds
# [ ] Configure gas limits for network conditions
