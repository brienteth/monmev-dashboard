FROM python:3.10-slim

WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# API_URL must point to deployed API service URL
ENV API_URL=https://YOUR_API_RENDER_URL \
    STREAMLIT_PORT=8501

EXPOSE 8501
CMD ["streamlit", "run", "monmev_dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]
